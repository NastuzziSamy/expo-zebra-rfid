<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Bluetooth permissions for RFID scanner connectivity -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>This app needs Bluetooth access to connect to Zebra RFID scanners and readers.</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>This app needs Bluetooth access to connect to Zebra RFID scanners and readers.</string>
	
	<!-- MFi accessories support -->
	<key>UISupportedExternalAccessoryProtocols</key>
	<array>
		<string>com.zebra.rfid</string>
		<string>com.motorolasolutions.rfid</string>
	</array>
</dict>
</plist>
